<%- include('../partials/header') %>

            <main class="main">
               <%- include('../partials/search') %>
                
                

                <div class="main-list">
                    <h1>
                        LIST OF MOVIES BY <%= genre.name.toUpperCase() %>:
                    </h1>

                  
                    <% if (typeof findMovies == 'undefined') { %>
                        
                        <ol class="main-list-ol">
                            <% genre.movies.forEach(genreMovie => { %>
                                <div class="list-container">
                                    <a href="/movies/detail/<%= genreMovie.id %>"><li class="main-list-li"><i class="far fa-check-circle"></i><p><%= genreMovie.title %></p><button>DETAIL</button></li></a>
                                </div>
                            <% }) %>    
                        </ol>

                    <% } else { %>

                        <ol class="main-list-ol">
                            <% findMovies.forEach(movie => { %>
                                <div class="list-container">
                                    <a href="/movies/detail/<%= movie.id %>"><li class="main-list-li"><i class="far fa-check-circle"></i><p><%= movie.title %></p><button>DETAIL</button></li></a>
                                </div>
                            <% }) %>    
                        </ol>

                    <% } %>

                </div>    
            </main>

        </div>
            
    </div>

</body>
</html>